.section_posts #primary_content #schemantics {
	float: left;
	width: 767px;
}

.section_posts #primary_content aside {
	width:185px;
	float: right;
}

.content_grid {
	padding: 0;
	margin: 0;
	list-style-type: none;
}

.content_grid li {
	display: inline-block;
	width: 231px;
	height: 130px;
	margin: 0 30px 30px 0;
	border: 1px dotted #E40F4F;
	padding: 0;
}

.content_grid li:nth-child(3n+3) {
	margin-right: 0;
}

.content_grid li a,
.content_grid li a img {
	display: block;
}

.content_grid li:hover {
	border-style: solid;
}