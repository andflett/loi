.section_events #primary_content #schemantics {
	float: left;
	width: 650px;
}

.section_events #primary_content aside {
	width: 231px;
	float: right;
}

/* =events */

	.event {
		width: 100%;
		overflow: hidden;
		margin-bottom: 35px;
	}
	
	.event h2 {
		margin-bottom: 10px;
	}

	.event time {
		display: block;
		width: 170px;
		float: left;
		font-size: 16px;
		line-height: 18px;
		font-family: bentonsansregular;
	}
	
	.event time span {
		font-size: 30px;
		line-height: 38px;
		display: block;
	}
	
	.event .content {
		float: right;
		width: 450px;
	}