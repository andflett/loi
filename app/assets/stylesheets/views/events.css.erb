/* =events */

	.event {
		width: 100%;
		overflow: hidden;
		margin-bottom: 43px;
	}
	
	.event h2 {
		margin-bottom: 6px;
	}

	.event time {
		display: block;
		width: 210px;
		float: left;
		font-size: 16px;
		line-height: 18px;
		color: #535251;
	}
	
	.event time span {
		font-size: 28px;
		line-height: 28px;
		display: block;
		margin-bottom: 5px;
	}
	
	.event .content {
		float: left;
		width: 680px;
	}