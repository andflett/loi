.section_events #primary_content #schemantics {
	float: left;
	width: 700px;
}

.section_events #primary_content aside {
	width: 231px;
	float: right;
}

.section_events #primary_content aside h2 {
	margin-bottom: 17px;
}

/* =events */

	.event {
		width: 100%;
		overflow: hidden;
		margin-bottom: 40px;
	}
	
	.event h2 {
		margin-bottom: 10px;
	}

	.event time {
		display: block;
		width: 170px;
		float: left;
		font-size: 16px;
		line-height: 18px;
		color: #535251;
	}
	
	.event time span {
		font-size: 28px;
		line-height: 28px;
		display: block;
		margin-bottom: 5px;
	}
	
	.event .content {
		float: right;
		width: 460px;
	}