.section_events #primary_content,
.section_resources #primary_content {
  padding-right: 0;
  width: 1036px;
}

.section_events #primary_content #schemantics,
.section_resources #primary_content #schemantics {
	width: 680px;
	background: #cee9e7;
	padding-top: 25px;
	border-radius: 5px 0 5px 5px;
}

.section_events #primary_content aside,
.section_resources #primary_content aside {
	width: 225px;
	padding: 5px 25px 20px 25px;
	background: #ffffff;
	border-radius: 0 0 0 20px;
	position: relative;
	top: -30px;
	font-family: bentonsansregular;
}

.section_events #primary_content aside p,
.section_resources #primary_content aside p {
  font-size: 15px;
  line-height: 22px;
}

.section_events #primary_content aside p.cta a,
.section_resources #primary_content aside p.cta a {
  width: 100%;
}

/* =events */

	.event {
		width: 100%;
		overflow: hidden;
		margin-bottom: 43px;
	}
	
	.event h2 {
		margin-bottom: 7px;
	}
	
	.event h2 a {
	  display: inline-block;
	}
	
	.event p {
	  font-size: 15px;
	}

	.event time {
		display: block;
		width: 190px;
		float: left;
		font-size: 16px;
		line-height: 18px;
		color: #535251;
	}
	
	.event time span {
		font-size: 28px;
		line-height: 28px;
		display: block;
		margin-bottom: 5px;
	}
	
	.event .content {
		float: left;
		width: 490px;
	}