#archetypes {
	margin: 0;
	padding: 0;
	list-style-type: none;
}

#archetypes li {
	margin: 0;
	padding: 0;
}

.tweets {
	list-style-type: none;
	padding: 0;
}

.tweets li {
	list-style-type: none;
	padding: 0;
	margin-bottom: 17px;
	font-size: 13px;
}

.tweets li:last-child {
	margin: 0;
}

.section_home .content_grid li:nth-child(3n+3) {
	margin-right: 23px;
}

.section_home .content_grid li:nth-child(4n+4) {
	margin-right: 0;
}

#featured_content {
	position: relative;
}

#featured_content #archetypes li {
	background: #cee9e7;
	border-radius: 10px;
	padding: 10px 20px 10px;
	overflow: hidden;
}

#featured_content #archetypes h3 {
	font-size: 22px;
	color: #E40F4F;
	font-family: bentonsansmedium;
	text-transform: uppercase;
	padding-bottom: 15px;
	border-bottom: 1px solid #E40F4F;
	width:95%;
}

#featured_content #archetypes .intro {
	margin-bottom: 25px;
	padding-bottom: 0px;
	font-style: italic;
}

#featured_content #archetypes p {
	color: #535251;
	margin-bottom: 25px;
}

#featured_content #archetypes p:last-child { margin: 0; }

#featured_content #archetypes p strong {
	color: #E40F4F;
}

#featured_content #archetypes li .media {
	width: 600px;
	float: left;
	padding: 20px;
}

#featured_content #archetypes li img {
	float: right;
	border-radius: 300px;
	margin-right: 50px;
	margin-top: 20px;
}

#featured_content h2 {
	font-size: 24px; 
	line-height: 28px;
	margin-bottom: 35px;
	color: #E40F4F;
	border-bottom: 1px solid #E40F4F;
	padding: 0px 0 18px;
	font-family: bentonsansmedium;
	text-transform: uppercase;
}

#featured_content #pagination {
	list-style-type: none;
	padding: 0;
	margin: 0;
}

#featured_content #pagination li {
	padding: 0;
	margin: 0;
}

#featured_content #pagination .page_links {
	display: none;
}

#featured_content #pagination .prev,
#featured_content #pagination .next {
	text-indent: -1337px;
	display: block;
	background-repeat: no-repeat;
	background-position: top left;
	position: absolute;
	top: 45%;
	height: 42px;
	width: 42px;
	cursor: pointer;
}

#featured_content #pagination .prev {
	background-image: url(<%= asset_path "icons/previous.png" %>);
	left: 13px;
}

#featured_content #pagination .next {
	background-image: url(<%= asset_path "icons/next.png" %>);
	right: 13px;
}
