/* grid */

  .inspiration {
    padding-bottom: 3px;
  }
  
/* featured */

  #featured_content {
	  position: relative;
	  padding: 15px 0 0 0;
	  width: 1066px;
  }
  
  #featured_content:before {
    content: '';
    width: 36px;
    height: 87px;
    position: absolute;
    top: -5px;
    left: 50px;
    display: block;
    background-image: url(<%= asset_path "icons/flash.png" %>);
    z-index: 10;
  }
  
  #featured_content #pagination {
    position: absolute;
    padding: 0;
    margin: 0;
    top: -5px;
    left: 0;
    width: 100%;
  }
  
  #featured_content #pagination .prev,
  #featured_content #pagination .next {
    position: absolute;
    top: 0;
    left: 600px;
    display: block;
    cursor: pointer;
    width: 36px;
    height: 87px;
    text-indent: -1337px;
    background: no-repeat top left;
    z-index: 10;
  }
  
  #featured_content #pagination .page_links { display: none; }
  #featured_content #pagination .prev { background-image: url(<%= asset_path "icons/previous.png" %>);}
  #featured_content #pagination .next { left: 650px; background-image: url(<%= asset_path "icons/next.png" %>);}
  
  #featured_content .banners {
    padding: 0;
    margin: 0;
    list-style-type: none;
    position: relative;
    z-index: 5;
    width: 100%;
    overflow: hidden;
    height: 350px;
  }
  
  #featured_content .splash {
    width: 750px;
    background: #98CBD7;
    border-radius: 0 20px 0 0;
    display: block;
    height: 350px;
    float: left;
    position: relative;
  }
  
  #featured_content .splash img {
    position: absolute;
    z-index: 6;
    top: 0;
    left: 0;
    min-width: 100%;
    border-radius: 0 20px 0 0;
  }
  
  #featured_content .splash h2 {
    position: absolute;
    top: 15px;
    left: 100px;
    font-family: bentonsansmedium;
    text-transform: uppercase;
    font-size: 16px;
    line-height: 26px;
    display: inline-block;
    z-index: 8;
  }
  
  #featured_content .splash h2 span {
    display: inline-block;
    color: #E40F4F;
    background: #ffffff;
    padding: 0 7px;
  }
  
  #featured_content .splash h2 span.type {
    background: #E40F4F;
    color: #ffffff;
    display: inline-block;
  }
  
  #featured_content .splash blockquote:before {
    content: "";
    display: block;
    position: absolute;
    left: -140px;
    top: 0px;
    width: 130px;
    height: 130px;
    background: url(<%= asset_path "layout/quotes.png" %>) no-repeat top left;
  }
  
  #featured_content .splash blockquote {
    position: absolute;
    top: 115px;
    left: 190px;
    z-index: 7;
    width: 500px;
    background: repeat top left url(<%= asset_path "layout/text_bg.png" %>);
    font-size: 36px;
    line-height: 40px;
    display: inline-block;
    font-family: bentonsansregular;
    color: #E40F4F;
    padding: 0 10px;
  }