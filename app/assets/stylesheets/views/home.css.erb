/* grid */

  .tweets {
  	list-style-type: none;
  	padding: 0;
  }

  .tweets li {
  	list-style-type: none;
  	padding: 0;
  	margin-bottom: 17px;
  	font-size: 13px;
  }

  .tweets li:last-child {
  	margin: 0;
  }
  
/* featured */

  #featured_content {
	  position: relative;
	  padding: 15px 0 0 0;
	  width: 1066px;
  }
  
  #featured_content:before {
    content: '';
    width: 36px;
    height: 87px;
    position: absolute;
    top: -5px;
    left: 50px;
    display: block;
    background-image: url(<%= asset_path "icons/flash.png" %>);
    z-index: 10;
  }
  
  #featured_content #pagination {
    position: absolute;
    padding: 0;
    margin: 0;
    top: -5px;
    left: 0;
    width: 100%;
  }
  
  #featured_content #pagination .prev,
  #featured_content #pagination .next {
    position: absolute;
    top: 0;
    left: 600px;
    display: block;
    cursor: pointer;
    width: 36px;
    height: 87px;
    text-indent: -1337px;
    background: no-repeat top left;
    z-index: 10;
  }
  
  #featured_content #pagination .page_links { display: none; }
  #featured_content #pagination .prev { background-image: url(<%= asset_path "icons/previous.png" %>);}
  #featured_content #pagination .next { left: 650px; background-image: url(<%= asset_path "icons/next.png" %>);}
  
  #featured_content .banners {
    padding: 0;
    margin: 0;
    list-style-type: none;
    position: relative;
    z-index: 5;
    width: 100%;
    overflow: hidden;
    height: 350px;
  }
  
  #featured_content .splash {
    width: 750px;
    background: #98CBD7;
    border-radius: 0 20px 0 0;
    display: block;
    height: 350px;
    float: left;
    position: relative;
  }
  
  #featured_content .splash img {
    position: absolute;
    z-index: 6;
    top: 0;
    left: 0;
    min-width: 100%;
    border-radius: 0 20px 0 0;
  }
  
  #featured_content .splash h2 {
    position: absolute;
    top: 15px;
    left: 100px;
    font-family: bentonsansmedium;
    text-transform: uppercase;
    font-size: 16px;
    line-height: 26px;
    display: inline-block;
    z-index: 8;
  }
  
  #featured_content .splash h2 span {
    display: inline-block;
    color: #E40F4F;
    background: #ffffff;
    padding: 0 7px;
  }
  
  #featured_content .splash h2 span.type {
    background: #E40F4F;
    color: #ffffff;
    display: inline-block;
  }
  
  #featured_content .details {
    width: 300px;
    float: right;
  }
  
  #featured_content .details .pane {
    border-radius: 15px 0 0 15px;
    background: #ffffff;
    padding: 10px 20px;
    margin-bottom: 10px;
  }
  
  #featured_content .details .pane *:last-child {
    margin-bottom: 0;
  }
  
  #featured_content .details .excerpt {
    font-family: bentonsansregular;
    padding-bottom: 10px;
  }
  
  #featured_content .details .excerpt p {
    font-size: 14px;
  }
  
  #featured_content .details .option {
    padding: 10px;
  }
  
  #featured_content .details .option a {
    font-size: 16px;
    line-height: 42px;
    display: block;
    padding-left: 52px;
    background: no-repeat left center;
  }
  
  #featured_content .details .read a {
    background-image: url(<%= asset_path "icons/view.png" %>);
    font-family: bentonsansmedium;
    text-transform: uppercase;
  }
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
