body { 
	font-family: Helvetica, Arial, sans-serif; 
	color: #535251;
	-webkit-font-smoothing: antialiased;
}

::selection { background:#E40F4F; color:#ffffff; }
::-moz-selection { background:#E40F4F; color:#ffffff; }
::-webkit-selection { background:#E40F4F; color:#ffffff; }

/* =h1 */

  h1 { 
    font-size: 24px; 
		line-height: 28px;
		margin-bottom: 35px;
		color: #E40F4F;
		border-bottom: 1px dotted #E40F4F;
		padding: 0px 0 18px;
		font-family: bentonsansregular;
		font-weight: normal;
  }

/* =h2 */

  h2 { 
		font-size: 18px; 
		line-height: 26px;
		margin-bottom: 25px;
		font-weight: normal;
		color: #535251;
		font-family: bentonsansregular;
  }

	h2 a {
		display: block;
	}
	
	h2 a:hover,
	h2 a:active,
	h2 a:focus {
		text-decoration: none;
		color: #127E89;
	}
	
	.panel h2 {
		margin-bottom: 23px;
		padding-bottom: 7px;
		color: #E40F4F;
		border-bottom: 1px dotted #E40F4F;
	}

/* =h3 */

  h3 { 
    font-size: 16px; 
    margin-bottom: 10px;
		font-weight: normal;
  }

/* =p */

  p { 
    font-size: 15px;
    line-height: 23px; 
    margin-bottom: 20px;
		font-weight: 100;
  }

	p.footnote {
		font-size: 14px;
	}

/* =a */

  a { color: #E40F4F; text-decoration: none; }
  a:hover, a:focus, a:active { text-decoration: none; color: #127E89; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-weight: 100;
	font-size: 15px; line-height: 20px; padding-bottom: 12px; }

/* =time */

	time { 
		font-size: 13px;
		display: block; 
		margin-bottom: 3px;
		font-weight: 100;
	}
	
	iframe {
		display: block;
		margin: 2px 0 30px;
	}
	
	aside iframe {
		margin-top: 6px;
	}
	
	strong { 
		font-weight: normal;
	}
	
	figure { 
		padding: 0;
		margin: 0 0 25px;
	}
	
	blockquote p {
		margin-bottom: 10px;
		font-style: italic;
	}
	
	cite {
		margin-bottom: 30px;
		font-size: 13px;
		display: block;
		font-style: normal;
	}
