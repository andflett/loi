/*
	Background: A8D7D4
	Light Blue: A8D7D4
	Dark Blue: 127E89
	Light Red: E40F4F
	Dark Red: 91103D
	Dark Grey: 313232
	Light Grey: 535251
*/

@media all {

	body { 
		background: #ffffff url(<%= asset_path "layout/background.jpg" %>) repeat-y top center;
	}
	
	.container {
		width: 1006px;
		margin: 0 auto 20px;
		padding: 30px;
		background: #A8D7D4;
	}
	
	.container.panels {
		width: 1066px;
		margin: 0 auto 20px;
		padding: 0;
		background: transparent;
		overflow: hidden;
	}
	
	.panels .panel {
		width: 282px;
		margin: 0 20px 0 0;
		float: left;
		padding: 20px 30px;
		background: #A8D7D4;
		height: auto !important;
		height: 220px;
		min-height: 220px;
	}
	
	.panels .panel:last-child {
		margin: 0;
	}
	
	.panels .panel p:last-child {
		margin: 0;
	}
	
	/* =header */
	
		header.container { 
			position: relative;
			padding: 0 40px;
			overflow: hidden;
			width: 986px;
		}
	
		header #social {
			background: #E40F4F;
			color: #ffffff;
			padding: 10px 20px 12px 30px;
			margin-bottom: 41px;
		}
		
		header #social p.heading {
			text-transform: uppercase;
			font-size: 14px;
			display: inline-block;
			margin: 0 15px 0 0;
			position: relative;
			top: 1px;
			font-family: bentonsansmedium;
		}
		
		header #social ul.icon_list {
			display: inline-block;
			padding: 0;
			margin: 0;
			list-style-type: none;
		}
		
		header #social ul.icon_list li {
			display: inline-block;
			margin: 0;
			padding: 0 5px 0 0;
		}
		
		header #social ul.icon_list li a {
			color: #ffffff;
			width: 24px;
			height: 24px;
			text-indent: -1337px;
			display: block;
			background-repeat: no-repeat;
			background-position: top left;
		}
		
		header #social ul.icon_list li a:hover,
		header #social ul.icon_list li a:active,
		header #social ul.icon_list li a:focus {
			text-decoration: none;
		}
		
		header #social ul.icon_list li.twitter a { background-image: url(<%= asset_path "icons/twits.png" %>); }
		header #social ul.icon_list li.facebook a { background-image: url(<%= asset_path "icons/facebook.png" %>); }
		header #social ul.icon_list li.linkedin a { background-image: url(<%= asset_path "icons/linkedin.png" %>); }
		
		header #social p.cta {
			display: inline-block;
			margin: 0;
			padding: 0;
			float: right;
			position: relative;
			top: -1px;
		}
		
		header #social p.cta a {
			color: #ffffff;
			display: inline-block;
			background: #ffffff;
			color: #E40F4F;
			border-radius: 5px;
			font-size: 12px;
			padding: 3px 15px 2px;
			font-family: bentonsansmedium;
			text-transform:uppercase;
		}
		
		header #social p.cta a:hover,
		header #social p.cta a:active,
		header #social p.cta a:focus {
			text-decoration: none;
			color: #127E89;
		}
		
		header #social div {
			display: inline-block;
		}
		
		header p#branding {
			float: left;
			margin: 0 40px 40px 0;
			font-family: bentonsansmedium;
		}
		
		header p#branding a {
			width: 220px;
			height: 169px;
			padding: 51px 0 0 0;
			display: block;
			background: url(<%= asset_path "blocks/large_red.png" %>) no-repeat top left;
			color: #ffffff;
			text-align: center;
			text-transform: uppercase;
		}
		
		header p#branding a:hover,
		header p#branding a:focus,
		header p#branding a:active {
			text-decoration: none;
		}
		
		header p#branding .init {
			font-size: 13px;
			display: inline-block;
			padding: 0 11px 3px;
			position: relative;
		}
		
		header p#branding .init:before {
			content: '+';
			position: absolute;
			left: 0;
			top : -1px;
		}
		
		header p#branding .init:after {
			content: '+';
			position: absolute;
			right: 0;
			top : -1px;
		}
		
		header p#branding .title {
			display: inline-block;
			border-top: 1px solid #ffffff;
			border-bottom: 1px solid #ffffff;
			padding: 10px 0;
			font-size: 18px;
			line-height: 24px;
			width: 160px;
			margin: 0 20px 0;
		}
		
		header p#tagline {
			width: 640px;
			float: left;
			color: #E40F4F;
			text-transform: uppercase;
			font-size: 21px;
			line-height: 28px;
			padding-top: 44px;
			font-family: bentonsansmedium;
			font-weight: normal;
			margin: 0;
		}
		
		header #primary_navigation {
			float: left;
			width: 650px;
			overflow: hidden;
			padding: 20px 0px;
		}
		
		header #primary_navigation ul {
			list-style-type: none;
			padding: 0;
			margin: 0;
			border-top: 1px solid #E40F4F;
			padding-top: 21px;
		}
		
		header #primary_navigation ul li:first-child a {
			padding-left: 0;
		}
 
		header #primary_navigation ul li {
			display: inline-block;
			text-transform: uppercase;
			font-size: 16px;
			padding: 0px;
			font-family: bentonsansmedium;
		}
		
		header #primary_navigation ul li a {
			color: #535150;
			display: block;
			padding: 0 12px 0;
			position: relative;
			font-family: bentonsansmedium;			
		}
				
		header #primary_navigation ul li a:active,
		header #primary_navigation ul li a:focus,
		header #primary_navigation ul li a:hover,
		header #primary_navigation ul li a.active {
			color: #E40F4F;
			text-decoration: none;
		}
		
	/* =primary_content */
	
		#primary_content {
			overflow: hidden;
			position: relative;
		}
	
		#primary_content #schemantics {
			float: left;
			width: 525px;
		}
	
		#primary_content aside {
			width: 400px;
			padding: 0px;
			float: right;
		}
		
	/* =footer */
	
		footer.container {
			background: transparent;
			padding: 0 0 0;
			width: 1066px;
		}
		
		footer.container p {
			font-size: 12px;
			color: #ffffff;
		}
		
		footer.container p a {
			color: #ffffff;
		}

}
