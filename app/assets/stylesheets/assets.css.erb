/* Graceful image replacement */

  .ir { position: relative; display: block; overflow: hidden; }
  .ir a { cursor: pointer; }
  .ir span { 
    width: 100%; height: 100%;
    position: absolute; top: 0; left: 0;
    background-repeat: no-repeat;
    background-position: top left;
  }

	.print { display: none; margin-bottom: 50px; margin-top: 30px; }

	#main p.cta {
		margin: 0 0 7px 0;
		padding: 0;
		position: relative;
	}
		
	#main p.cta a {
		color: #ffffff;
		display: inline-block;
		color: #ffffff;
		background: #E40F4F;
		border-radius: 10px 0 0 10px;
		font-size: 12px;
		padding: 3px 15px 3px;
		font-family: bentonsansmedium;
		text-transform:uppercase;
	}
		
	#main p.cta a:hover,
	#main p.cta a:active,
	#main p.cta a:focus {
		text-decoration: none;
		background: transparent;
		background: #127E89;
	}

/* =filters */

  .filter_blocks {
    background: #ffffff;
		padding: 18px 20px 11px;
		border-radius: 20px 0 0 20px;
		margin-bottom: 31px;
		width: 1066px;
  }
  
  .filter_blocks .filters:last-child {
    margin: 0;
  }

	.filters {
		padding: 0;
		overflow: hidden;
		margin: 0 0 20px;
		list-style-type: none;
	}
	
	.filters li {
		display: inline-block;
		margin: 0 3px 7px 0;
		padding: 0;
	}
	
	.filters li a {
		display: block;
		padding: 0 12px;
		line-height: 26px;
		font-size: 11px;
		color: #ffffff;
		background: #E40F4F;
		border-radius: 5px;
		font-family: bentonsansmedium;
		text-transform:uppercase;
	}
	
	.filters li a:hover,
	.filters li a:active,
	.filters li a:focus,
	.filters li.active a {
		text-decoration: none;
		background: transparent;
		background: #127E89;
	}
	
/* =panel */

	.panel {
		padding: 20px 20px 27px;
		background: #ffffff;
		border-radius: 5px;
		position: relative;
	}
	
	.panel {
		color: #535251;
	}

  aside.panel {
    background: #cee9e7;
  }
  
	.panel p:last-child {
		margin-bottom: 0;
	}
	
	.abstract {
		font-style: italic;
		margin-bottom: 65px;
		padding-top: 0px;
		border-bottom: 1px solid #E40F4F;
		padding-bottom: 26px;
		position: relative;
	}
	
	.abstract p {
		font-size: 16px;
		line-height: 25px;
	}
	
	.abstract p:last-child {
		margin-bottom: 0;
	}
	
	#main .abstract .core_action {
		position: absolute;
		right: 0px;
		bottom: -31px;
		font-style: normal;
	}
	
	#main .abstract .core_action a {
		border-radius: 0;
	}
	
/* =post */

  .post {
    background: #ffffff;
    border-radius: 5px;
    padding: 20px;
  }
  
  .post img {
    width: 100%;
    margin-bottom: 20px;
  }

  .post h1 {
    width: 100%;
    background: transparent;
    padding: 0;
    border-radius: 0;
    margin-bottom: 5px;
  }

	.post time { 
		padding-bottom: 10px;
		margin-bottom: 20px;
		font-style: italic;
	}
	
	.post time em {
		color: #E40F4F;
	}
	
/* =content_grid */

	.content_grid {
  	padding: 0;
  	margin: 0;
  	list-style-type: none;
  	overflow: hidden;
  	width: 100%;
  }
  
  .content_grid li:nth-child(3n+3) {
  	margin-right: 0;
  }
  
/* grid blocks */

  .person_block {
  	display: block;
  	float: left;
  	width: 317px;
    height: 220px;
  	margin: 0 27px 27px 0;
  	padding: 0;
  	position: relative;
  	background: #ffffff;
  }

  .person_block.active {
    cursor: pointer;
  }

  .person_block img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1;
  }

  .person_block .media {
    z-index: 2;
    position: absolute;
    bottom: 0;
  }

  .person_block .media h2 {
    background: #ffffff;
    font-size: 16px;
    line-height: 22px;
    display: inline-block;
    font-family: bentonsansmedium;
    color: #E40F4F;
    margin: 0;
    padding: 5px 7px;
  }

  .person_block .media p {
    background: #E40F4F;
    font-size: 15px;
    line-height: 19px;
    display: inline-block;
    font-family: georgia;
    color: #ffffff;
    padding: 7px 8px 8px;
    margin: 0;
    font-weight: normal;
  }

  .person_block:nth-child(3n+3) {
    margin-right: 0;
  }

/* =details */

  .details {
    width: 300px;
    float: right;
  }
  
  .details .pane {
    border-radius: 15px 0 0 15px;
    background: #ffffff;
    padding: 10px 20px;
    margin-bottom: 10px;
  }
  
  .details .pane *:last-child {
    margin-bottom: 0;
  }
  
  .details .excerpt {
    font-family: bentonsansregular;
    padding-bottom: 11px;
  }
  
  .details .excerpt p {
    font-size: 14px;
  }
  
  .details .excerpt span {
    font-size: 14px;
    color: #E40F4F;
    display: block;
  }
  
  .details .option {
    padding: 10px;
  }
  
  .details .option a {
    font-size: 16px;
    line-height: 42px;
    display: block;
    padding-left: 52px;
    background: no-repeat left center;
    font-family: bentonsansmedium;
    text-transform: uppercase;
  }
  
  .details .read a {
    background-image: url(<%= asset_path "icons/view.png" %>);
  }
  
  .details .related a {
    background-image: url(<%= asset_path "icons/related.png" %>);
  }
  
  .details .link a {
    background-image: url(<%= asset_path "icons/link.png" %>);
  }
  
  .details .video a {
    background-image: url(<%= asset_path "icons/play.png" %>);
  }
  
  .details .listen a {
    background-image: url(<%= asset_path "icons/listen.png" %>);
  }
	

