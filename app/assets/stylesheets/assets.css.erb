/* Graceful image replacement */

  .ir { position: relative; display: block; overflow: hidden; }
  .ir a { cursor: pointer; }
  .ir span { 
    width: 100%; height: 100%;
    position: absolute; top: 0; left: 0;
    background-repeat: no-repeat;
    background-position: top left;
  }

	.print { display: none; margin-bottom: 50px; margin-top: 30px; }

	#main p.cta {
		margin: 0;
		padding: 0;
		position: relative;
	}
		
	#main p.cta a {
		color: #ffffff;
		display: inline-block;
		color: #ffffff;
		background: #E40F4F;
		border-radius: 3px;
		font-size: 12px;
		padding: 3px 15px 3px;
		font-family: bentonsansmedium;
		text-transform:uppercase;
		
	}
		
	#main aside p.cta {
		float: right;
	}
		
	#main p.cta a:hover,
	#main p.cta a:active,
	#main p.cta a:focus {
		text-decoration: none;
		background: transparent;
		background: #127E89;
	}

	#main aside p.core_action {
		position: absolute;
		top: 31px;
		right: 30px;
	}

/* =filters */

	.filters {
		padding: 0;
		overflow: hidden;
		margin: 0 0 20px;
		list-style-type: none;
	}
	
	.filters li {
		display: inline-block;
		margin: 0 6px 7px 0;
		padding: 0;
	}
	
	.filters li a {
		display: block;
		padding: 0 12px;
		line-height: 26px;
		font-size: 11px;
		color: #ffffff;
		background: #E40F4F;
		border-radius: 3px;
		font-family: bentonsansmedium;
		text-transform:uppercase;
	}
	
	.filters li a:hover,
	.filters li a:active,
	.filters li a:focus,
	.filters li.active a {
		text-decoration: none;
		background: transparent;
		background: #127E89;
	}
	
/* =post */

	.post h1 {
		border-bottom: 0;
		margin: 0;
		padding: 0 0 10px 0;
	}
	
	.post time { 
		border-bottom: 1px dotted #E40F4F;
		padding-bottom: 15px;
		margin-bottom: 20px;
	}
	
	.post_block {
		position: relative;
	}
	
	.post_block img {
		position: absolute;
		top: 0;
		left: 0;
		z-index: 10;
	}
	
	.post_block .media {
		height: 130px;
		width: 211px;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 20;
		background: #ffffff;
		visibility: hidden;
		padding: 10px;
	}
	
	.no_hero .media {
		visibility: visible;
	}
	
	.post_block .media h2 {
		font-size: 14px;
		margin-bottom: 7px;
		font-weight: normal;
	}
	
	.post_block .media p {
		font-size: 12px;
		font-weight: normal;
		line-height: 19px;
	}
	
	.post_block {
		display: inline-block;
		width: 231px;
		height: 150px;
		margin: 0 23px 23px 0;
		padding: 0;
	}

	.post_block a,
	.post_block a img {
		display: block;
	}

	.post_block:hover .media {
		visibility: visible;
	}
	
	

