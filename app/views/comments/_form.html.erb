<%= simple_form_for [commentable, comment], :html => { :class => "primary_panel form_panel", :remote => ((comment.new_record?) ? true : false)  } do |f| %>
	
	<%= field_set_tag do %>
		<%= f.input :body, :label => "Comment", :input_html => { :rows => 10 } %>
	<% end %>

	<%= field_set_tag nil, :class => "actions" do %>
		<%= f.submit :value => ((comment.new_record?) ? "Share" : "Save") %>	
	<% end %>

<% end %>